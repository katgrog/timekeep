<section class="watch__large">
	<!-- IMAGE -->
	<%= image_tag @watch.image.url(:medium) %>
</section>

<section class="watch__info">
	<h2><%= @watch.name %></h2>
	<%= @watch.description %>

	<div>
		<span>Posted by <%= mail_to @watch.user.email, @watch.user.first_name %></span>
	</div>

	<div class="action">
		<% if current_user_owns?(@watch)  %>
			<%= link_to "Edit", edit_watch_path(@watch) %>
			<%= link_to "Delete", watch_path(@watch), method: :delete, class: "button" %>
		<% else  %>
			<b><%= number_to_currency @watch.price, unit: "Â£" %></b>
			<%= link_to "Buy", "#", class: "button" %>
		<% end %>
	</div>
</section>
